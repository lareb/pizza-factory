<div class="container mx-auto mt-12">
  <h2 class="text-3xl font-semibold text-center text-blue-600">Our Pizza Menu</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-8">
    <% @pizzas.each do |pizza| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-6 text-center">
          <h5 class="text-xl font-semibold text-gray-800"><%= pizza.name %></h5>
          <p class="text-md text-gray-600">Category: <%= pizza.category.name %></p>
          
          <p class="mt-2 text-md text-gray-700">
            <strong>Prices:</strong><br>
            Regular: ₹<%= pizza.price_regular %><br>
            Medium: ₹<%= pizza.price_medium %><br>
            Large: ₹<%= pizza.price_large %>
          </p>

          <%= link_to "Order Now", new_order_path, class: "mt-4 inline-block bg-green-500 text-white px-6 py-2 rounded-full hover:bg-green-600 transition-all" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @pizzas.respond_to?(:total_pages) && @pizzas.total_pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%= paginate @pizzas, theme: nil %>
    </div>
  <% end %>
</div>
