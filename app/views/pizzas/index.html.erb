<div class="container mx-auto mt-10 px-4">
  <h2 class="text-center text-3xl font-bold text-blue-600">Our Pizza Menu</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-6">
    <% @pizzas.each do |pizza| %>
      <div class="bg-white shadow-lg rounded-lg p-6 text-center">
        <h5 class="text-xl font-semibold text-gray-800"><%= pizza.name %></h5>
        <p class="text-gray-600">Category: <%= pizza.category.name %></p>
        
        <p class="text-gray-700 mt-2">
          <strong>Prices:</strong><br>
          Regular: ₹<%= pizza.price_regular %><br>
          Medium: ₹<%= pizza.price_medium %><br>
          Large: ₹<%= pizza.price_large %>
        </p>

        <a href="<%= new_order_path %>" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded mt-4 inline-block">Order Now</a>
      </div>
    <% end %>
  </div>

  <% if @pizzas.respond_to?(:total_pages) && @pizzas.total_pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%= paginate @pizzas %>
    </div>
  <% end %>
</div>
