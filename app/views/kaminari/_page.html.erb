<% if page.current? %>
  <span class="px-4 py-2 mx-1 text-white bg-blue-500 rounded-md shadow-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel, 
    class: "px-4 py-2 mx-1 text-gray-700 bg-gray-200 hover:bg-gray-300 rounded-md transition duration-300" %>
<% end %>
