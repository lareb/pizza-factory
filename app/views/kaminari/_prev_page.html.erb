<% if current_page.first? %>
  <span class="px-4 py-2 text-gray-400 cursor-not-allowed bg-gray-200 rounded-md">
    <%= t('views.pagination.previous') %>
  </span>
<% else %>
  <%= link_to url, remote: remote, rel: 'prev',
    class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition" do %>
    <%= t('views.pagination.previous') %>
  <% end %>
<% end %>
